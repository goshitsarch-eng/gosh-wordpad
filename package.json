{
  "name": "gosh-wordpad-clone",
  "version": "3.1.2",
  "description": "A faithful clone of Windows 98 WordPad built with React and Electron",
  "type": "module",
  "main": "dist-electron/main.js",
  "homepage": "https://github.com/goshitsarch-eng/gosh-wordpad",
  "repository": {
    "type": "git",
    "url": "https://github.com/goshitsarch-eng/gosh-wordpad.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "electron:dev": "vite build && tsc -p tsconfig.electron.json && electron .",
    "electron:build": "npm run build && electron-builder",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ electron/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"electron/**/*.ts\""
  },
  "keywords": [
    "wordpad",
    "windows98",
    "electron",
    "react",
    "text-editor",
    "rich-text"
  ],
  "author": {
    "name": "Goshitsarch",
    "email": "goshitsarch@users.noreply.github.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fontsource/noto-sans": "^5.2.10",
    "electron-updater": "^6.8.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.goshitsarch.wordpad",
    "productName": "Gosh WordPad",
    "executableName": "gosh-wordpad",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "build/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "icon": "build/icon.png",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "extraResources": [
      { "from": "assets/fonts", "to": "fonts", "filter": ["*.ttf"] }
    ],
    "publish": {
      "provider": "github",
      "owner": "goshitsarch-eng",
      "repo": "gosh-wordpad"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "icon": "build/icons",
      "category": "Office;TextEditor;",
      "mimeTypes": [
        "text/plain",
        "text/html"
      ]
    }
  }
}
