{
  "name": "gosh-wordpad-clone",
  "version": "3.0.3",
  "description": "A faithful clone of Windows 98 WordPad built with React and Electron",
  "type": "module",
  "main": "dist-electron/main.js",
  "homepage": "https://github.com/goshitsarch-eng/Gosh-Wordpad-Clone",
  "repository": {
    "type": "git",
    "url": "https://github.com/goshitsarch-eng/Gosh-Wordpad-Clone.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "electron:dev": "vite build && tsc -p tsconfig.electron.json && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": [
    "wordpad",
    "windows98",
    "electron",
    "react",
    "text-editor",
    "rich-text"
  ],
  "author": {
    "name": "Goshitsarch",
    "email": "goshitsarch@users.noreply.github.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=24.13.0"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.goshitsarch.wordpad",
    "productName": "Gosh WordPad",
    "executableName": "gosh-wordpad",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "build/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "icon": "build/icon.png",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "publish": null,
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "tar.gz"
      ],
      "icon": "build/icons"
    }
  }
}
