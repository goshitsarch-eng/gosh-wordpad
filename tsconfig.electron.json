  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-electron",
    "rootDir": "electron"
  },
  "include": ["electron/**/*.ts", "electron/**/*.cts"]
}
